<!-- app/templates/shows.hbs -->

<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="lead"><strong>Shows</strong></span>
    </div>

    <table class="table show-table">
      <tbody>
      {{#each showList as |show|}}
        <tr>
          <td>{{!-- #link-to 'shows' show --}}{{show.name}}{{!-- /link-to --}}</td>
          <td><button class="btn btn-primary btn-xs pull-right" {{action "deleteShow" show}}>Remove</button></td>
        </tr>
      {{/each}}
      </tbody>
    </table>

    <div class="panel-footer">
      <form class="form-inline" {{action "addShow" on="submit"}}>
        <label>New show:</label>
        {{input class="form-control" type="text" value=name}}
        <button type="submit" class="btn btn-primary btn-sm">Add</button>
      </form>
    </div>
  </div>
</div>
