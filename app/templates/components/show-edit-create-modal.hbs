{{#bs-modal
  class="showtime-modal"
  title=dialogTitle
  size=null
  fade=false
  open=displayForm
  onShow=(action "setupForm")
  onHide=(action (mut displayForm) false)
  as |modal|
}}
  {{#modal.header}}
    <h4 class="modal-title">{{dialogTitle}}</h4>
  {{/modal.header}}
  {{#modal.body}}

    {{#bs-form onSubmit=(action "saveShow" this) as |form|}}
      <label for="show-modal-name">Name:</label>
      {{input id="show-modal-name" class="form-control" type="text" value=name autofocus=true}}

      <div class="form-group">
        <label for="show-modal-length">Length:</label>
        <div class="input-group">
          {{input id="show-modal-length" class="form-control" type="text" value=inputLength placeholder="Length" id="show-modal-length"}}
          <span id="formatted-length-display" class="input-group-addon">{{format-length length}}</span>
        </div>
      </div>

      <label for="show-modal-startTime">Start time:</label>
      {{input id="show-modal-startTime" class="form-control" type="text" value=startTime placeholder="Start time"}}
    {{/bs-form}}

  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="primary" onClick=(action modal.submit)}}{{submitButtonText}}{{/bs-button}}
  {{/modal.footer}}

{{/bs-modal}}
