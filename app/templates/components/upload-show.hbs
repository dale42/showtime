{{#bs-button type="primary" size="xs" onClick=(action (mut isDialogOpen) true)}}Upload show{{/bs-button}}

{{#bs-modal
  class="showtime-modal"
  title="Upload show"
  size=null
  fade=false
  open=isDialogOpen
  onHide=(action (mut isDialogOpen) false)
  as |modal|
}}
  {{#modal.header}}
    <h4 class="modal-title">Upload show</h4>
  {{/modal.header}}
  {{#modal.body}}

    <form {{action "uploadFile" on="submit"}}>
      <input name=fileInput type="file" onchange={{action "setFile"}}>
    </form>

  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="primary" onClick=(action modal.submit) disabled=isSubmitButtonDisabled}}Upload{{/bs-button}}
  {{/modal.footer}}

{{/bs-modal}}
